{% extends "layout.njk" %}

{% block head %}

    <title>LaunchBase Fase 02 - Classes</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

{% endblock %}

{% block content %}

        <div id="wrapper">
            <h1>Classes</h1>
        </div>

        <section class="cards">

            {# Usando o for no nunjucks para repetir essa estrutura 6 vezes. Os dados serao pegos do arquivo data.js, que foi importado em server.js e agora pode ser usado aqui #}
            {% for item in items %}
                <div class="card" id="{{ item.id }}"> 
                    {# So se o card tiver o featured true, a div de baixo recebe uma segunda classe. Eh o if com o nunjucks #}
                    <div class="card_image-container {{ 'featured-wrapper' if item.featured }}">
                        <img src="https://img.youtube.com/vi/{{ item.id }}/maxresdefault.jpg" alt="Thumbnail Video Class {{ item.title }}">
                        {% if item.featured %}
                            <div class="featured">Featured</div>
                        {% endif %}
                    </div>
        
                    <div class="card_content">
                        <p>{{ item.title }}</p>
                        <p>{{ item.by }}</p>
                    </div>
                    <div class="card_info">
                        <p>{{ item.duration }}</p>
                        <p class="card_price">{{ item.price }}</p>
                    </div>
                </div>
            {% endfor %}

        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>

        <script src="/scripts.js"></script>

{% endblock %}